{
  "name": "wechaty-dice-king",
  "version": "1.0.3",
  "description": "Wechaty 卡牌抽取游戏插件，类似骰娘https://v2docs.kokona.tech/zh/latest/CookBook.html",
  "typings": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cjs.json",
    "clean": "shx rm -fr dist/*",
    "dist": "npm-run-all clean build copy",
    "dist:commonjs": "jq -n \"{ type: \\\"commonjs\\\" }\" > dist/cjs/package.json",
    "start": "ts-node test/index.ts",
    "start:common": "node test/dic.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "npm pack",
    "lint": "npm run lint:es && npm run lint:ts",
    "lint:md": "markdownlint README.md",
    "lint:ts": "tsc --isolatedModules --noEmit",
    "lint:es": "eslint --ignore-pattern tests/fixtures/ '{bin,examples,scripts,src,tests}/**/*.ts'",
    "lint:fix": "eslint --fix \"src/**/*.ts\" \"tests/**/*.spec.ts\" --ignore-pattern tests/fixtures/",
    "release": "verpub publish",
    "release:dry": "verpub --dry-run",
    "copy": "copy-files-from-to"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leochen-g/wechaty-dice-bot.git"
  },
  "peerDependencies": {
    "wechaty": "*"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leochen-g/wechaty-dice-bot/issues"
  },
  "homepage": "https://github.com/leochen-g/wechaty-dice-bot#readme",
  "engines": {
    "wechaty": ">=0.69",
    "node": ">=14"
  },
  "dependencies": {
    "@types/app-root-path": "^1.2.4",
    "app-root-path": "^3.0.0",
    "lodash": "^4.17.21",
    "qrcode-terminal": "^0.12.0",
    "random-sampler": "^0.1.1"
  },
  "devDependencies": {
    "@chatie/eslint-config": "^1.0.4",
    "@chatie/git-scripts": "^0.6.2",
    "@chatie/semver": "^0.4.7",
    "@chatie/tsconfig": "^4.6.2",
    "@types/lodash": "^4.14.172",
    "@types/ms": "^0.7.31",
    "@types/qrcode-terminal": "^0.12.0",
    "@typescript-eslint/parser": "^4.32.0",
    "copy-files-from-to": "^3.2.2",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "wechaty": "^1.20.2",
    "wechaty-puppet-wechat": "^1.18.1"
  },
  "copyFiles": [
    {
      "from": "src/cards/*.json",
      "to": "dist/esm/cards/"
    },
    {
      "from": "src/mod/*.json",
      "to": "dist/esm/mod/"
    },
    {
      "from": "src/cards/*.json",
      "to": "dist/cjs/cards/"
    },
    {
      "from": "src/mod/*.json",
      "to": "dist/cjs/mod/"
    }
  ],
  "files": [
    "bin/",
    "dist/",
    "src/"
  ],
  "publishConfig": {
    "tag": "next"
  },
  "_id": "wechaty-dice-king@1.0.3",
  "_commitid": "9034d14"
}
